<UserControl x:Class="SimpleInventory.Views.HomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleInventory.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Simple Inventory" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0 5 0 0"/>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <Button Content="Add Item" Width="200" Margin="0 0 0 10" Command="{Binding MoveToAddItemScreen}"/>
            <Button Content="Manage Items" Margin="0 0 0 10" Width="200"/>
            <Button Content="Reports" Width="200" Margin="0 0 0 10" Command="{Binding MoveToAddItemScreen}"/>
        </StackPanel>
    </Grid>
</UserControl>
